{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["ES2015", "DOM"],
    "paths": {
      "@/*": ["src/*"],
      "@env": ["node_modules/react-native-dotenv"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@navigation/*": ["src/navigation/*"],
      "@state/*": ["src/state/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["src/**/*", "App.tsx"],
  "exclude": ["node_modules"]
}
